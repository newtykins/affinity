{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"strict": false,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"~structures/*": ["./structures/*"],
			"~helpers/*": ["./helpers/*"],
			"~affinity": ["./index.ts"],
			"~constants": ["./constants.ts"],
			"~errors/*": ["./errors/*"]
		},
		"plugins": [{ "transform": "ts-transform-paths" }]
	}
}
